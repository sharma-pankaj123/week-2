  
#include <stdio.h>  
  
void bestBuySellDays(int prices[], int n, int *buy, int *sell) {  
    int minPriceIndex = 0;  
    int maxProfit = 0;  
    *buy = 0;  
    *sell = 0;  
  
    for (int i = 1; i < n; i++) {  
        if (prices[i] < prices[minPriceIndex]) {  
            minPriceIndex = i;  
        }  
        if (prices[i] - prices[minPriceIndex] > maxProfit) {  
            maxProfit = prices[i] - prices[minPriceIndex];  
            *buy = minPriceIndex;  
            *sell = i;  
        }  
    }  
} 
