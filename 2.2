#include <stdio.h>  
#include <stdlib.h>  
  
void mergeStrings(const char *file1, const char *file2, const char *file3) {  
    FILE *fp1 = fopen(file1, "r");  
    FILE *fp2 = fopen(file2, "r");  
    FILE *fp3 = fopen(file3, "w");  
  
    if (!fp1 || !fp2 || !fp3) {  
        printf("Error opening files.\n");  
        return;  
    }  
  
    char ch1, ch2;  
    while ((ch1 = fgetc(fp1)) != EOF || (ch2 = fgetc(fp2)) != EOF) {  
        if (ch1 != EOF) fputc(ch1, fp3);  
        if (ch2 != EOF) fputc(ch2, fp3);  
    }  
  
    fclose(fp1);  
    fclose(fp2);  
    fclose(fp3);  
}  
  
int main() {  
    mergeStrings("file1.txt", "file2.txt", "file3.txt");  
    printf("Merged string written to file3.txt\n");  
  
    return 0;  
}  
